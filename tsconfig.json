{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
